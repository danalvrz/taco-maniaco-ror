<div class="min-h-full lg:w-2/3 md:w-2/3 w-full flex items-center mx-auto justify-center py-3 px-4 sm:px-6 lg:px-8">
  <div class="w-full space-y-8">
<h2 class="mt-6 text-center text-5xl font-extrabold text-white">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-full" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-3">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "rounded-full text-neutral-500 py-3 my-4 px-5 bg-gray-100 inline-block font-medium hover:text-yellow-600" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
