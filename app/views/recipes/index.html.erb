<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-white">Your Recipes</h1>
    <%= link_to 'New recipe', new_recipe_path, class: "text-center rounded-full text-neutral-500 py-3 px-5 bg-gray-100 inline-block font-medium hover:text-yellow-600" %>
  </div>

  <div id="recipes" class="min-w-full">
    <% @recipes.each do |recipe| %>
    <div class="recipe-card border bg-slate-100 p-5 flex justify-between mt-5 rounded-lg">
    <div class="w-1/3 mr-6">
    <p class="font-bold text-3xl text-yellow-600 border-b pb-5 w-fit border-neutral-400 hover:text-yellow-500"><%= link_to "#{recipe.name}", recipe %></p>
    <p> <%= button_to 'Remove', recipe_path(recipe), method: :delete, class: "rounded-full border border-yellow-600 hover:bg-white text-yellow-600 py-3 ml-2 mt-5 px-5 bg-gray-100 inline-block font-medium" %></p>
    </div>
    <div class="lg:mr-10 px-3 w-2/3">
    <p><%= recipe.description %></p>
    </div>
    </div>
    <% end %>
  </div>
</div>
