<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Your Recipes</h1>
    <%= link_to 'New recipe', new_recipe_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="recipes" class="min-w-full">
    <% @recipes.each do |recipe| %>
    <div class="recipe-card border bg-slate-300 p-5 flex justify-between mt-5 rounded-lg">
    <div class="w-1/2">
    <p class="font-bold text-2xl"><%= link_to "#{recipe.name}", recipe %></p>
    <p> <%= button_to 'Remove', recipe_path(recipe), method: :delete, class: "rounded-lg py-3 ml-2 mt-5 px-5 bg-gray-100 inline-block font-medium" %></p>
    </div>
    <div class="mr-10 w-1/2">
    <p><%= recipe.description %></p>
    </div>
    </div>
    <% end %>
  </div>
</div>
