<div id="<%= dom_id recipie_food %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= recipie_food.quantity %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this recipie food", recipie_food, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this recipie food', edit_recipie_food_path(recipie_food), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
